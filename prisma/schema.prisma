// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id           String    @id @default(cuid())
  title        String
  slug         String    @unique
  description  String
  content      String
  project_type String    @default("web")
  tech_stack   TechStack[]
  images       String    // Store JSON string that we'll parse in the application
  live_url     String?
  github_url   String?
  figma_url    String?
  client       String?
  status       String    @default("published")
  order        Int       @default(0)
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  developed_at DateTime?
}

model Experience {
  id           String       @id @default(cuid())
  title        String
  company      String
  position     String
  period       String
  location     String?
  type         String?
  logo         String?
  start_date   DateTime
  end_date     DateTime?
  description  String
  achievements Achievement[]
  tech_stack   TechStack[]
  created_at   DateTime     @default(now())
  updated_at   DateTime     @updatedAt

  @@index([company])
  @@index([start_date])
}

model TechStack {
  id          String      @id @default(cuid())
  name        String
  category    String
  version     String?
  experiences Experience[]
  projects    Project[]
}

model Achievement {
  id           String     @id @default(cuid())
  description  String
  experience   Experience @relation(fields: [experience_id], references: [id])
  experience_id String
}

model ContactMessage {
  id         String   @id @default(cuid())
  name       String
  email      String
  message    String
  read       Boolean  @default(false)
  created_at DateTime @default(now())
}
