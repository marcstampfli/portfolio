{
  "extends": ["next/core-web-vitals", "prettier", "next"],
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "ecmaVersion": 2024
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_" }
    ],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "react/no-unescaped-entities": "off",
    "@next/next/no-img-element": "off"
  }
}
